{
	"compilerOptions": {
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,
        "skipLibCheck": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"lib" : [ "es2019" ],
		"outDir": "../client/server",
		"composite": true,
		"declaration": true,
		"resolveJsonModule": true
	},
	"include": [
		"./src/**/*",
		"./src/localization/*.json"
	],
	"exclude": [
		"node_modules"
	],
	"references": []
}

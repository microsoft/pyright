{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2019"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        // "isolatedModules": true,
        "sourceMap": true,
        "outDir": "./out",
    },
    "exclude": ["node_modules", "dist", "out"]
}
